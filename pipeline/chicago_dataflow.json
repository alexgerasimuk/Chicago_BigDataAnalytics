{
	"name": "chicago_dataflow",
	"properties": {
		"activities": [
			{
				"name": "Traffic",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://data.cityofchicago.org/resource/kf7e-cur8.json?$select=time, region_id, speed, region, bus_count",
					"method": "GET",
					"datasets": [
						{
							"referenceName": "traffic",
							"type": "DatasetReference"
						}
					]
				}
			},
			{
				"name": "Crimes",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://data.cityofchicago.org/resource/crimes.json?$select=id,date, year, community_area, primary_type, arrest, domestic",
					"method": "GET"
				}
			},
			{
				"name": "Permits",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://data.cityofchicago.org/resource/building-permits.json?$select=id,permit_type,issue_date,community_area",
					"method": "GET"
				}
			},
			{
				"name": "Affordable Housing",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://data.cityofchicago.org/resource/s6ha-ppgi.json?$select=community_area,community_area_number,property_type,units",
					"method": "GET"
				}
			},
			{
				"name": "Copy traffic",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"filePattern": "arrayOfObjects"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['time']"
								}
							},
							{
								"source": {
									"path": "$['region_id']"
								}
							},
							{
								"source": {
									"path": "$['speed']"
								}
							},
							{
								"source": {
									"path": "$['region']"
								}
							},
							{
								"source": {
									"path": "$['bus_count']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "RestResourceTraffic",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "traffic",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}